<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/static/css/dashboard.css">
</head>
<body>
    <%- include('../partials/side-bar') %>
    <div class="content">
        <%= user.firstName %>
        <div class="col-12 d-flex justify-content-end">
            <a href="/admin/password-change/<%= user._id %>" class="btn">Şifre Değiştir </a>
        </div>

        <div class="progressPaymentContainer mt-3">
            <div class="row">
                <div class="col-md-6 col-12 cardCol">
                    <div class="card">
                        <p><%= dealerCount %></p>
                        <p>Toplam Bayi</p>
                    </div>
                </div>
                <div class="col-md-6 col-12 cardCol">
                    <div class="card">
                        <p><%= customerCount %></p>
                        <p>Toplam Müşteri</p>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4 col-12 cardCol">
                    <div class="card">
                        <p>₺<%= totalProgressPayments %></p>
                        <p>Toplam Hakediş</p>
                    </div>
                </div>
                <div class="col-md-4 col-12 cardCol">
                    <div class="card completed">
                        <p>₺<%= completedPayment %></p>
                        <p>Ödenen Hakediş</p>
                    </div>
                </div>
                <div class="col-md-4 col-12 cardCol">
                    <div class="card unpaid">
                        <p>₺<%= unpaidPayment %></p>
                        <p>Ödenecek Hakediş</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('../partials/script') %>
    <script src="/static/js/style.js"></script>

</body>
</html>